<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Add New Review to <%= movie.title %></h1>
        
        <div>
            <form action="/movies/<%= movie._id %>/reviews" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="review[text]" placeholder="Text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="review[author]" placeholder="Author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>