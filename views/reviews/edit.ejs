<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Edit Review</h1>
        
        <div>
            <form action="/movies/<%= movie_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="review[text]" value="<%= review.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>