<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">MovieApp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= movie.poster %>">
                <div class="caption-full">
                    <h4><a><%= movie.title %></a></h4>
                    <p><%= movie.synopsis %></p>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/movies/<%= movie._id %>/reviews/new">Add New Review</a>
                </div>
                <hr>
                <% movie.reviews.forEach(function(review){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <%= review.author.username %>
                            <p>
                                <%= review.text%>
                            </p>
                            <% if (currentUser && review.author.id.equals(currentUser._id)) { %>
                                <a class="btn btn-xs btn-warning" href="/movies/<%= movie._id %>/reviews/<%= review._id %>/edit">Edit</a>
                                <form action="/movies/<%= movie._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>