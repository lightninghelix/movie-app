<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to MovieApp!</h1>
            <p>
                <a class="btn btn-primary btn-lg" href="/movies/new">Add New Movie</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center">
        <% movies.forEach(function(movie) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= movie.poster %>">
                    <div class="caption">
                        <h4><%= movie.title %></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/movies/<%= movie._id %>">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>